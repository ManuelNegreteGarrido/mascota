

<h1>Pets</h1>

<div id="pets">
  <div class="container">
    <div class="row">
      <% @pets.each do |pet| %>
          <%= render pet %>
          <p>
            <%= link_to "Show this pet", pet %>
          </p>
      <% end %>
    </div>
  </div>
</div>

<%= link_to "New pet", new_pet_path %>
